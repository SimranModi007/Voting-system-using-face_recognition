# there are six screens
windowManager:
    voterloginWindow:
	adminloginWindow:
	signupWindow:
	logDataWindow:
	homeWindow:
	finalWindow:


# GUI for the login window of the admin
<adminloginWindow>:
	username : username
	pwd : pwd
	FloatLayout:
		size: root.width, root.height
		canvas.before:
		    Rectangle:
		        pos: self.pos
		        size:self.size
		        source:'v9.jpg'
		Label:
			text : "USERNAME: "
			size_hint : 0.2, 0.1
			pos_hint : {"x":0.04, "top":0.65}
			bold:True
			font_name:"Comic"
			color: 1,1,1,1
		TextInput:
			id : username
			multiline :False
			size_hint : 0.3, 0.08
			pos_hint : {"x" : 0.2, "top" : 0.65}
			on_text_validate : pwd.focus = True
		Label:
			text : "PASSWORD: "
			size_hint : 0.2, 0.1
			pos_hint : {"x" : 0.04, "top" : 0.45}
			font_name:"Comic"
			bold:True
			color: 1,1,1,1
		TextInput:
			id : pwd
			multiline :False
			size_hint : 0.3, 0.08
			pos_hint : {"x" : 0.2, "top" : 0.45}
		Button:
			text : "LOGIN"
			size_hint : 0.2, 0.08
			pos_hint : {"x" : 0.2, "top" : 0.3}
			background_color:(0,0,0.5,0.5)
			on_release:
				root.validate1()
				root.manager.transition.direction = "up"

#voter log in gui window
<voterloginWindow>:
	name5 : name5
	v_id : v_id
	done : done
	FloatLayout:
		size: root.width, root.height
		canvas.before:
		    Rectangle:
		        pos: self.pos
		        size:self.size
		        source:'v8.jpg'
		Label:
			text : "USERNAME: "
			size_hint : 0.2, 0.1
			pos_hint : {"x":0.2, "top":0.8}
			bold:True
			color:0,0,0,1
		TextInput:
			id : name5
			multiline :False
			size_hint : 0.3, 0.08
			pos_hint : {"x" : 0.45, "top" : 0.8}
			on_text_validate : v_id.focus = True
		Label:
			text : "VOTING_ID: "
			size_hint : 0.2, 0.1
			pos_hint : {"x" : 0.2, "top" : 0.6}
			bold:True
			color:0,0,0,1
		TextInput:
			id : v_id
			multiline :False
			size_hint : 0.3, 0.08
			pos_hint : {"x" : 0.45, "top" : 0.6}
		Button:
			text : "LOGIN"
			size_hint : 0.2, 0.08
			pos_hint : {"x" : 0.4, "top" : 0.35}
			background_color:(0,0,0.5,1)
			on_release:
				root.validate1()
				root.manager.transition.direction = "up"
		Label:
		    id : done
		    text : "look towards the camera for face verification after clicking on login"
			size_hint : 0.2, 0.1
			pos_hint : {"x":0.4, "top":0.2}
			font_size: 20
			bold:True
			color:1,0,0,1

# GUI for the signup or registration of voter to cast a vote
<signupWindow>:
	name2 : name2
	voting : voting
	username : username
	age : age
	city : city
	state : state
	over : over
	FloatLayout:
	    canvas.before:
		    Rectangle:
		        pos: self.pos
		        size:self.size
		        source:'v6.jpg'
		Label:
			text : "Register user for vote "
		    bold:True
		    font_size : "20sp"
			size_hint : 0.4, 0.1
			pos_hint : {"x":0.3, "top":1}
			color:0,0,0,1
		Label:
			text : "NAME: "
		    bold:True
			size_hint : 0.2, 0.1
			pos_hint : {"x":0.15, "top":0.9}
			color:0,0,0,1
		TextInput:
			id : name2
			multiline : False
			size_hint : 0.3, 0.08
			pos_hint : {"x" : 0.35, "top" : 0.9}
			on_text_validate : voting.focus = True
		Label:
			text : "VOTING-ID: "
			bold:True
			size_hint : 0.2, 0.1
			pos_hint : {"x" : 0.15, "top" : 0.79}
			color:0,0,0,1
		TextInput:
			id : voting
			hint_text : "Ex-A101"
			multiline : False
			size_hint : 0.3, 0.08
			pos_hint : {"x" : 0.35, "top" : 0.79}
			on_text_validate : username.focus = True
		Label:
			text : "USERNAME: "
			bold:True
			size_hint : 0.2, 0.1
			pos_hint : {"x" : 0.15, "top" : 0.7}
			color:0,0,0,1
		TextInput:
			id : username
			multiline : False
			size_hint : 0.3, 0.08
			pos_hint : {"x" : 0.35, "top" : 0.7}
			on_text_validate : age.focus = True
		Label:
			text : "AGE: "
			bold:True
			size_hint : 0.2, 0.1
			pos_hint : {"x" : 0.15, "top" : 0.59}
			color:0,0,0,1
		TextInput:
			id : age
			input_filter: 'float'
			multiline : False
			size_hint : 0.3, 0.08
			pos_hint : {"x" : 0.35, "top" : 0.59}
			on_text_validate : city.focus = True
		Label:
			text : "CITY: "
			bold:True
			size_hint : 0.2, 0.1
			pos_hint : {"x" : 0.15, "top" : 0.5}
			color:0,0,0,1
		Spinner:
		    id: city
		    text: "city"
		    values: ["Ahmadnagar","Akola","Amravati","Aurangabad","Bhandara","Bhusawal","Bid","Buldhana","Chandrapur","Daulatabad","Dhule","Jalgaon","Kalyan","Karli","Kolhapur","Mahabaleshwar","Malegaon","Matheran","Mumbai","Nagpur","Nanded","Nashik","Osmanabad","Pandharpur","Parbhani","Pune","Ratnagiri","Sangli","Satara","Sevagram","Solapur","Thane","Ulhasnagar","Vasai-Virar","Wardha","Yavatma"]
		    size_hint : 0.3, 0.08
			pos_hint : {"x" : 0.35, "top" : 0.5}
			background_normal : ''
			background_color:(0,0,0.5,0.5)
		Label:
			text : "STATE: "
			bold:True
			size_hint : 0.2, 0.1
			pos_hint : {"x" : 0.15, "top" : 0.39}
			color:0,0,0,1
		TextInput:
			id : state
			text: "Maharashtra"
			multiline : False
			size_hint : 0.3, 0.08
			pos_hint : {"x" : 0.35, "top" : 0.39}
		Button:
			text : "SUBMIT"
			size_hint : 0.2, 0.1
			pos_hint : {"x" : 0.39, "top" : 0.15}
			background_color:(0,0,0.5,0.5)
			on_press :
				root.signupbtn()
				root.manager.transition.direction = "right"
		Label:
		    id : over
		    text : "look toward the camera after clicking on submit "
		    bold:True
		    font_size: "20sp"
			size_hint : 0.3, 0.1
			pos_hint : {"x" : 0.4, "top" : 0.25}
			color: 1,0,0,1

# home window or main page of the app build
<homeWindow>:
    FloatLayout:
        canvas.before:
		    Rectangle:
		        pos: self.pos
		        size:self.size
		        source:'v1.jpg'
		Label:
		    text: "E-Vote"
		    size_hint : 0.9, 0.7
			pos_hint : {"x" : 0.35, "top" : 1.2}
			font_size: 60
			color: 1,1,1,1
		Label:
		    text: "Log in As: "
		    bold: True
		    size_hint : 0.3, 0.7
			pos_hint : {"x" : 0.03, "top" : 1.2}
			font_size: 40
			color: 1,1,1,1
        Button:
			text : "Voter"
			size_hint : 0.3, 0.1
			pos_hint : {"x" : 0.1, "top" : 0.7}
			background_color:(0,0,0.5,1)
			on_press :
				root.display1()
				root.manager.transition.direction = "right"
		Button:
			text : "Admin"
			size_hint : 0.3, 0.1
			pos_hint : {"x" : 0.1, "top" : 0.5}
			background_color:(0,0,0.5,1)
			on_press :
				root.display()
				root.manager.transition.direction = "right"

# GUI to show validation result
<finalWindow>:
	info : info
	FloatLayout:
	    canvas.before:
		    Rectangle:
		        pos: self.pos
		        size:self.size
		        source:'v1.jpg'
		Label:
			id : info
			size_hint : 0.3, 0.7
			pos_hint : {"x" : 0.1, "top" : 1.1}
			text : "Thank you for voting \n your vote has been \n recorded !!!"
			bold: True
			multiline : True
			font_size: 40
			color: 0,0,0,1
		Button:
			text : "OK"
			size_hint : 0.2, 0.1
			pos_hint : {"x" : 0.2, "top" : 0.3}
			background_color:(0,0,1,1)
			on_press :
				root.final1()
				root.manager.transition.direction = "right"

# window after user has been succesfully added
<useraddedWindow>:
	info : info
	FloatLayout:
	    canvas.before:
		    Rectangle:
		        pos: self.pos
		        size:self.size
		        source:'v1.jpg'
		Label:
			id : info
			size_hint : 0.3, 0.7
			pos_hint : {"x" : 0.1, "top" : 1.1}
			text : "USER ADDED \n SUCCESSFULLY !!!"
			multi : True
			font_size: 40
			color: 0,0,0,1

# voting the party you want to vote for
<logDataWindow>:
	info : info
	FloatLayout:
	    canvas.before:
		    Rectangle:
		        pos: self.pos
		        size:self.size
		        source:'v10.jpg'
		Label:
			id : info
			size_hint : 0.5, 0.7
			pos_hint : {"x" : 0.3, "top" : 1.1}
			text : "Please select the party you want to vote for"
			bold : True
			font_size: 25
			color: 0,0,0,1
		Button:
			text : "Party A"
			size_hint : 0.2, 0.1
			pos_hint : {"x" : 0.4, "top" : 0.7}
			background_color:(0,0,1,1)
			on_press :
				root.final()
				root.manager.transition.direction = "right"
		Button:
			text : "Party B"
			size_hint : 0.2, 0.1
			pos_hint : {"x" : 0.4, "top" : 0.5}
			background_color:(0,0,1,1)
			on_press :
				root.final()
				root.manager.transition.direction = "right"
		Button:
			text : "Party C"
			size_hint : 0.2, 0.1
			pos_hint : {"x" : 0.4, "top" : 0.3}
			background_color:(0,0,1,1)
			on_press :
				root.final()
				root.manager.transition.direction = "right"

